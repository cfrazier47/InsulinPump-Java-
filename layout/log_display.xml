<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="65dp"
                android:height="35dip"
                android:includeFontPadding="false"
                android:minWidth="65dip"
                android:minHeight="35dip"
                android:onClick="goHome"
                android:text="home" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:text="8:42PM"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSample"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="April 27th"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/txtSample2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7:52AM - Blood Glucose: 162   Insulin Given: 4"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/txtSample3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9:30AM - Blood Glucose: 182   Insulin Given: 7"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/txtSample4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12:59PM - Blood Glucose: 160   Insulin Given: 4"
                android:textSize="8sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
